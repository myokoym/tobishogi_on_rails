<h1>飛び将棋</h1>
<p>
<%
  def who(piece)
    case(piece)
    when "1"
      "上"
    when "2"
      "下"
    when "0"
      "　"
    else
      piece
    end
  end
%>
<table border="1">
<% i = 0 -%>
<% @state.split(//).each_slice(3) do |line| %>
<tr>
<%   line.each do |piece| %>
<td>
<% form_tag(:action => :move) do %>
<%= hidden_field_tag(:state, @state) %>
<%= hidden_field_tag(:place, i) %>
<%= submit_tag(who(piece)) %>
<% end %>
</td>
<%     i += 1 -%>
<%   end %>
</tr>
<% end %>
</table>
</p>
<% if @message -%>
<p><%= @message %></p>
<% end -%>

